<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/ll_creditDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivBank"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:src="@mipmap/pro_default" />


                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="100dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/cre_btn_bg_ore"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvName"
                                style="@style/tv_primary_style"
                                android:layout_marginLeft="10dp"
                                android:layout_toLeftOf="@+id/tvStatus"
                                android:layout_toRightOf="@id/ivBank" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/total"
                                    style="@style/tv_second_style"
                                    android:text="贷款金额：" />

                                <TextView
                                    android:id="@+id/tvTotal"
                                    style="@style/tv_red_style" />

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_marginLeft="3dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvLimit"
                                style="@style/tv_second_style"
                                android:layout_width="0dp"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="额度范围：" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/time"
                                    style="@style/tv_second_style"
                                    android:text="期限：" />

                                <TextView
                                    android:id="@+id/tvTime"
                                    style="@style/tv_red_style" />

                                <TextView
                                    android:id="@+id/tvLim"
                                    style="@style/tv_second_style"
                                    android:layout_marginLeft="3dp"
                                    android:text="个月" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvL"
                                style="@style/tv_second_style"
                                android:layout_width="0dp"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="期限范围：" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="月供：" />

                                <TextView
                                    android:id="@+id/tvYueG"
                                    style="@style/tv_red_style" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvHf"
                                style="@style/tv_second_style"
                                android:layout_width="0dp"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:text="还款方式：" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="总利息：" />

                                <TextView
                                    android:id="@+id/tvT"
                                    style="@style/tv_red_style" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="放款时间：" />

                                <TextView
                                    android:id="@+id/tvFTime"
                                    style="@style/tv_red_style" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvRate"
                                style="@style/tv_second_style"
                                android:layout_width="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:text="利率：" />

                            <TextView

                                android:id="@+id/onpay"
                                style="@style/tv_second_style"
                                android:layout_width="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="1"
                                android:text="一次性收费：" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_credit_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/tv_second_style"
                                android:text="您的授信额：" />

                            <TextView
                                android:id="@+id/tv_credit_amount"
                                style="@style/tv_red_style" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/tv_second_style"
                                android:text="备注：" />

                            <TextView
                                android:id="@+id/tv_remarks"
                                style="@style/tv_red_style" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--用户基本资料-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:id="@+id/rlzl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/tv_primary_style"
                                android:layout_centerVertical="true"
                                android:text="用户基本资料" />

                            <ImageView
                                android:id="@+id/ivzl"
                                android:layout_width="6dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/arrow_down" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llzl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/tv_second_style"
                                        android:text="真实姓名：" />

                                    <TextView
                                        android:id="@+id/tv_tochat"
                                        style="@style/tv_red_style"
                                        android:drawablePadding="5dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/nicksex"
                                        style="@style/tv_second_style"
                                        android:text="性别：" />

                                    <TextView
                                        android:id="@+id/tvSex"
                                        style="@style/tv_red_style" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="身份证号：" />

                                <TextView
                                    android:id="@+id/IdCard"
                                    style="@style/tv_red_style" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:visibility="visible">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="常住地：" />

                                <TextView
                                    android:id="@+id/alwaysaddress"
                                    style="@style/tv_red_style"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="详细地址：" />

                                <TextView
                                    android:id="@+id/address"
                                    style="@style/tv_red_style"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/tv_second_style"
                                        android:text="婚姻状况：" />

                                    <TextView
                                        android:id="@+id/tv_wyl"
                                        style="@style/tv_red_style"
                                        android:text="" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView

                                        style="@style/tv_second_style"
                                        android:text="籍贯：" />

                                    <TextView
                                        android:id="@+id/tv_jgl"
                                        style="@style/tv_red_style"
                                        android:text="" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_gravity="bottom"
                                    android:text="户籍地址：" />

                                <TextView
                                    android:id="@+id/user_data"
                                    style="@style/tv_red_style"
                                    android:layout_gravity="bottom"
                                    android:text="" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    <!--用户资质-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:id="@+id/rlzz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/tv_primary_style"
                                android:layout_centerVertical="true"
                                android:text="用户资质" />

                            <ImageView
                                android:id="@+id/ivzz"
                                android:layout_width="6dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/arrow_down" />

                        </RelativeLayout>


                        <LinearLayout
                            android:id="@+id/llzz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/tv_second_style"
                                        android:text="职业身份：" />

                                    <TextView
                                        android:id="@+id/tv_zy"
                                        style="@style/tv_red_style"
                                        android:drawablePadding="5dp"
                                        android:text="" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:text="是否有本地社保：" />

                                <TextView
                                    android:id="@+id/tv_sb"
                                    style="@style/tv_red_style"
                                    android:text="有" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_gravity="bottom"
                                    android:text="是否有本地公积金：" />

                                <TextView
                                    android:id="@+id/gjj_data"
                                    style="@style/tv_red_style"
                                    android:layout_gravity="bottom"
                                    android:text="有" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_gravity="bottom"
                                    android:text="名下房产类型：" />

                                <TextView
                                    android:id="@+id/house_data"
                                    style="@style/tv_red_style"
                                    android:layout_gravity="bottom"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_gravity="bottom"
                                    android:text="名下车产类型：" />

                                <TextView
                                    android:id="@+id/car_data"
                                    style="@style/tv_red_style"
                                    android:layout_gravity="bottom"
                                    android:text="" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    style="@style/tv_second_style"
                                    android:layout_gravity="bottom"
                                    android:text="您的信用状况：" />

                                <TextView
                                    android:id="@+id/xy_data"
                                    style="@style/tv_red_style"
                                    android:layout_gravity="bottom"
                                    android:text="" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!--贷款提速-->
                    <LinearLayout
                        android:id="@+id/llts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <RelativeLayout
                            android:id="@+id/rlts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/tv_primary_style"
                                android:layout_centerVertical="true"
                                android:text="贷款提速" />

                            <ImageView
                                android:id="@+id/ivts"
                                android:layout_width="6dp"
                                android:layout_height="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:background="@mipmap/arrow_down" />

                        </RelativeLayout>

                        <com.leaf.library.widget.MyListView
                            android:id="@+id/mlv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-15dp"
                            android:layout_marginRight="-15dp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <RelativeLayout
                android:id="@+id/rlUpload"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvUpload"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gen"
                    android:gravity="center"
                    android:text="上传附件资料"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlUpCredit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvUpCredit"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gen"
                    android:gravity="center"
                    android:text="上传增信资料"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/start_bj"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#ffffff"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bj"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gen"
                    android:gravity="center"
                    android:text="提交其他附件（补件）"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/start_rl"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/start_msg"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_gen"
                    android:gravity="center"
                    android:text="联系信贷经理"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ffffff"></View>
        </LinearLayout>

        <com.beyonditsm.financial.view.LoadingView
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.beyonditsm.financial.view.LoadingView>
    </FrameLayout>
</LinearLayout>
