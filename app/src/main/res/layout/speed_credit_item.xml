<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_back"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_productLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_productChara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="14sp"
                android:text="" />

            <TextView
                android:id="@+id/tv_costDescribe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/speed_credit_linearlayout">

            <TextView
                style="@style/speed_credit_top_text"
                android:text="额度" />

            <TextView
                android:id="@+id/tv_value"
                android:layout_marginTop="10dp"
                style="@style/speed_credit_bottom_yellow_text" />
        </LinearLayout>

        <View
            android:layout_marginTop="18.5dp"
            android:layout_marginBottom="18.5dp"
            style="@style/vertical_light_thin_divider" />

        <LinearLayout style="@style/speed_credit_linearlayout">

            <TextView
                style="@style/speed_credit_top_text"
                android:text="期限" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/speed_credit_bottom_yellow_text" />
        </LinearLayout>
        <View
            android:layout_marginTop="18.5dp"
            android:layout_marginBottom="18.5dp"
            style="@style/vertical_light_thin_divider" />

        <LinearLayout style="@style/speed_credit_linearlayout">

            <TextView
                style="@style/speed_credit_top_text"
                android:text="利率" />

            <TextView
                android:id="@+id/tv_rate"
                style="@style/speed_credit_bottom_yellow_text" />
        </LinearLayout>

        <View
            android:layout_marginTop="18.5dp"
            android:layout_marginBottom="18.5dp"
            style="@style/vertical_light_thin_divider" />

        <LinearLayout style="@style/speed_credit_linearlayout">

            <TextView
                style="@style/speed_credit_top_text"
                android:text="放款周期" />

            <TextView
                android:id="@+id/tv_loanPeriod"
                style="@style/speed_credit_bottom_yellow_text" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>