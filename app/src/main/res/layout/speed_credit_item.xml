<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">
        <ImageView
            android:id="@+id/ivBanl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="急借贷"
                    android:textSize="18dp"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--贷款只需身份证"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="要求：当地生活人群，手机实名制"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            style="@style/speed_credit_linearlayout">
            <TextView
                style="@style/speed_credit_top_text"
                android:text="期限" />
            <TextView
                style="@style/speed_credit_bottom_yellow_text"
                android:text="4-50周" />
        </LinearLayout>
        <View style="@style/vertical_light_thin_divider"/>
        <LinearLayout
            style="@style/speed_credit_linearlayout">
            <TextView
                style="@style/speed_credit_top_text"
                android:text="额度"/>
            <TextView
                style="@style/speed_credit_bottom_yellow_text"
                android:text="0.2-1.2W"/>
        </LinearLayout>
        <View style="@style/vertical_light_thin_divider"/>
        <LinearLayout
            style="@style/speed_credit_linearlayout">
            <TextView
                style="@style/speed_credit_top_text"
                android:text="参考利率"/>
            <TextView
                style="@style/speed_credit_bottom_yellow_text"
                android:text="0.3%（D）"/>
        </LinearLayout>
        <View style="@style/vertical_light_thin_divider"/>
        <LinearLayout
            style="@style/speed_credit_linearlayout">
            <TextView
                style="@style/speed_credit_top_text"
                android:text="放款周期"/>
            <TextView
                style="@style/speed_credit_bottom_yellow_text"
                android:text="1个工作日"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>