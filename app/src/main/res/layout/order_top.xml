<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBank"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/pro_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ivBank"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProName"
                style="@style/tv_primary_style"
                android:text="贷款50万" />

            <LinearLayout
                android:id="@+id/ll_mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/et_back"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="金额"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="万"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tvUnit"
                        android:layout_toRightOf="@id/tvAmount"
                        android:background="@null"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:textColor="#ff6633"
                        android:textSize="14sp"
                        android:cursorVisible="false"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMonth"
                    android:layout_width="105dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/et_back"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tvL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="期限"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="个月"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tvMonth"
                        android:layout_toRightOf="@id/tvL"
                        android:gravity="center"
                        android:maxLength="3"
                        android:textColor="#ff6633"
                        android:textSize="14sp" />
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tvCal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/search_back"
                    android:gravity="center"
                    android:text="计算"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvScope"
            style="@style/tv_second_style"
            android:layout_width="0dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="额度范围：" />


        <TextView
            android:id="@+id/tvLim"
            style="@style/tv_second_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="期限范围：" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_second_style"
                android:text="月供：" />

            <TextView
                android:id="@+id/tvMonthPay"
                style="@style/tv_red_style"
                android:text="" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvPaytype"
            style="@style/tv_second_style"
            android:layout_width="0dp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="还款方式：" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView

                style="@style/tv_second_style"
                android:text="总利息：" />

            <TextView
                android:id="@+id/tvTotal"
                style="@style/tv_red_style"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                style="@style/tv_second_style"
                android:text="放款时间：" />

            <TextView
                android:id="@+id/tvLoan"
                style="@style/tv_red_style" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRate"
            style="@style/tv_second_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="利率：" />

        <TextView
            android:id="@+id/onpay"
            style="@style/tv_second_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="一次性收费：" />

    </LinearLayout>


</LinearLayout>
