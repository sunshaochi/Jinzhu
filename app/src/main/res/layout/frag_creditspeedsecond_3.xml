<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            style="@style/speed_credit_linearlayout_in_scrollview">
            <TextView
                style="@style/speed_credit_second_top_text"
                android:text="直系亲属"/>
            <!--姓名-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_speedRelativesName_1"
                    style="@style/tv_primary_style"
                    android:layout_centerVertical="true" />

                <EditText
                    android:id="@+id/et_speedRelativesName_1"
                    style="@style/cre_et" />
            </RelativeLayout>

            <View style="@style/view_line"></View>

            <!--联系电话-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_speedRelativesPhone_1"
                    style="@style/tv_primary_style"
                    android:layout_centerVertical="true" />

                <EditText
                    android:id="@+id/et_speedRelativesPhone_1"
                    style="@style/cre_et" />
            </RelativeLayout>

            <View style="@style/view_line"></View>

            <!--关系-->
            <RelativeLayout
                android:id="@+id/rl_speedMarriage"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/tv_speedRelationship_1"
                    style="@style/tv_primary_style"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tv_speedSelectRelationship_1"
                    style="@style/tv_select_style"
                    android:drawableRight="@mipmap/button_select"
                    android:textColor="#f63" />
            </RelativeLayout>

            <View style="@style/view_line"></View>
            <!--单位名称-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_speedRelativesWork_1"
                    style="@style/tv_primary_style"
                    android:layout_centerVertical="true"
                    android:text="单位名称:"/>

                <EditText
                    android:id="@+id/et_speedRelativesWork_1"
                    style="@style/cre_et" />
            </RelativeLayout>

            <View style="@style/view_line"
                android:visibility="gone"></View>

            <!--家庭/单位地址-->
            <RelativeLayout
                android:id="@+id/rl_speedRelativesWoH_1"
