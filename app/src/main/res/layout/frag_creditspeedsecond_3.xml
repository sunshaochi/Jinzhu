            <View style="@style/view_line"
                android:visibility="gone"></View>

            <TextView
                android:id="@+id/tv_speed_toEnd"
                style="@style/speed_credit_next_btn"
                android:text="下一步" />
            <TextView
                android:text="3/3"
                style="@style/speed_credit_second_bottom_text"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>