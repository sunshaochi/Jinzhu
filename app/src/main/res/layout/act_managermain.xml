<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <FrameLayout
        android:id="@+id/managermain_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bottom_lines" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llQd"
            style="@style/main_btm_ll">

            <ImageView
                android:id="@+id/ivQd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_package_nor" />

            <TextView
                android:id="@+id/tvQd"
                style="@style/main_btm_tv"
                android:text="抢单" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lldd"
            style="@style/main_btm_ll">

            <ImageView
                android:id="@+id/ivdd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_order_nor" />

            <TextView
                android:id="@+id/tvdd"
                style="@style/main_btm_tv"
                android:text="订单" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/llChat"
                style="@style/main_btm_ll"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/ivMes"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/tab_chat_nor" />

                <TextView
                    android:id="@+id/tvMes"
                    style="@style/main_btm_tv"
                    android:text="沟通" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_tag"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/unread_count_bg"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llMine"
            style="@style/main_btm_ll">

            <ImageView
                android:id="@+id/ivMine"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/tab_me_nor" />

            <TextView
                android:id="@+id/tvMine"
                style="@style/main_btm_tv"
                android:text="我的" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
