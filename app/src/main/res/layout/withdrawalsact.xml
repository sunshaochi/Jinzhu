<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <TextView
        style="@style/tv_primary_style"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="我的提现记录"
        android:textColor="@color/tv_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="时间"
            android:textColor="@color/tv_third_color" />

        <TextView
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="提现金额"
            android:textColor="@color/tv_third_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="余额"
            android:textColor="@color/tv_third_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="状态"
            android:textColor="@color/tv_third_color" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="#dfdfdf"
        android:layout_marginRight="15dp"
        android:layout_height="0.5dp"></View>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.beyonditsm.financial.view.pullfreshview.LoadRefreshView
            style="@style/pullrefresh_style"
            android:layout_marginLeft="15dp"
            android:divider="@null"
            android:id="@+id/txjl_ptr"
            android:layout_marginRight="15dp"
            android:background="@color/bg_color"
            />
        <com.beyonditsm.financial.view.LoadingView
            android:id="@+id/loadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.beyonditsm.financial.view.LoadingView>
    </FrameLayout>

</LinearLayout>
