<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/main_title"></include>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/managermain_fl"
        ></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/bottom_lines"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_color"
        android:orientation="horizontal">

        <LinearLayout
        android:id="@+id/llQd"
        style="@style/main_btm_ll">

        <ImageView
            android:id="@+id/ivQd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@mipmap/tab_package_nor"/>

        <TextView
            android:id="@+id/tvQd"
            style="@style/main_btm_tv"
            android:text="抢单"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/lldd"
            style="@style/main_btm_ll">

            <ImageView
                android:id="@+id/ivdd"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/tab_order_nor"/>

            <TextView
                android:id="@+id/tvdd"
                style="@style/main_btm_tv"
                android:text="订单"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/llChat"
                style="@style/main_btm_ll">

                <ImageView
                    android:id="@+id/ivMes"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@mipmap/tab_chat_nor"/>

                <TextView
                    android:id="@+id/tvMes"
                    style="@style/main_btm_tv"
                    android:text="沟通"
                    />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_tag"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/unread_count_bg"
                />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llMine"
            style="@style/main_btm_ll">

            <ImageView
                android:id="@+id/ivMine"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/tab_me_nor"/>

            <TextView
                android:id="@+id/tvMine"
                style="@style/main_btm_tv"
                android:text="我的"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
