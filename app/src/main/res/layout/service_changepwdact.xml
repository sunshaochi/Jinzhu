<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>


    <LinearLayout
        style="@style/input_corners"
        android:orientation="vertical">


    <EditText
        android:hint="请输入原密码"
        android:id="@+id/old_pwd"
        style="@style/update_et"
        android:layout_marginTop="6dp"
        android:inputType="textPassword"
        android:maxLength="20" />

    <View style="@style/view_line"></View>

    <EditText
        android:hint="请输入新密码"
        android:id="@+id/new_pwd"
        style="@style/update_et"
        android:maxLength="20" />
    <View style="@style/view_line"></View>

    <EditText
        android:hint="确认新密码"
        android:id="@+id/new_pwd2"
        style="@style/update_et"
        android:maxLength="20"
        android:layout_marginBottom="6dp"/>
    </LinearLayout>

    <Button
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/commit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_gen"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
