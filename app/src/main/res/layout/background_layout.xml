<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.beyonditsm.financial.view.pullfreshview.LoadRefreshView
            android:id="@+id/plv"
            style="@style/pullrefresh_style"
            android:layout_marginTop="1px"></com.beyonditsm.financial.view.pullfreshview.LoadRefreshView>


        <com.beyonditsm.financial.view.LoadingView
            android:id="@+id/loadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.beyonditsm.financial.view.LoadingView>

        <ImageView
            android:id="@+id/ivSuspen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:background="@mipmap/suspension_icon" />

        <com.beyonditsm.financial.view.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_suspen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="60dp"
            android:src="@mipmap/suspension_icon"
            fab:fab_shadow="false"
            fab:fab_type="normal"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>