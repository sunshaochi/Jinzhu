<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/tv_wallet_black"
                android:text="账户                "/>

            <TextView
                android:id="@+id/tvAmount"
                style="@style/tv_wallet_black"
                android:text="13011111111"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

            <View
                style="@style/view_line"
            android:layout_marginLeft="10dp"
          ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/tv_wallet_black"
                android:text="账户密码        "/>

            <EditText
                android:id="@+id/etAPwd"
                style="@style/tv_wallet_black"
                android:background="@null"
                android:hint="请输入账户密码"
                android:inputType="textPassword"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            style="@style/view_line"
            android:layout_marginLeft="10dp"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/tv_wallet_black"
                android:text="资金密码        "/>

            <EditText
                android:id="@+id/etCapitalPwd"
                style="@style/tv_wallet_black"
                android:background="@null"
                android:hint="请输入资金密码(6位数字)"
                android:inputType="numberPassword"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                />
        </LinearLayout>
        <View
            style="@style/view_line"
            android:layout_marginLeft="10dp"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                style="@style/tv_wallet_black"
                android:text="确认资金密码"/>

            <EditText
                android:id="@+id/etSurePwd"
                style="@style/tv_wallet_black"
                android:background="@null"
                android:hint="请输入资金密码(6位数字)"
                android:inputType="numberPassword"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvSure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/button_gen"
       android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
       />
</LinearLayout>
