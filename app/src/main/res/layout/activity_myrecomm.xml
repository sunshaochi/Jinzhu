<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout"></include>

    <!--<include layout="@layout/tj_up_content"></include>-->



    <com.beyonditsm.financial.view.pullfreshview.PullToRefreshListView
        android:id="@+id/fr_tj_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none"
        android:visibility="gone">
    </com.beyonditsm.financial.view.pullfreshview.PullToRefreshListView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginTop="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/tj_up_content" />
            <LinearLayout
                android:id="@+id/ll_tj_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow_rectangle"
                android:orientation="vertical"

                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="9dp"
                    android:paddingTop="12dp"
                    >

                    <TextView
                        android:text="我的推荐"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#666666"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:id="@+id/btn_receiveReward"
                        android:scaleType="fitXY"
                        android:src="@mipmap/waiting_get"
                        android:layout_alignParentRight="true"
                        />
                    <ImageView
                        android:id="@+id/already"
                        android:layout_width="90dp"
                        android:layout_height="36.5dp"
                        android:src="@mipmap/already_get"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="true"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/unhandledRewardAmount"
                        android:layout_width="90dp"
                        android:layout_height="36.5dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:textColor="#FF6600"
                       />
                </RelativeLayout>

                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:id="@+id/ll_wallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计收益"
                            android:textSize="13sp"
                            android:textColor="#b3b3b3"
                            android:textStyle="bold"
                            android:layout_gravity="left"/>
                        <TextView
                            android:id="@+id/handledRewardAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="20sp"
                            android:textColor="#FF6600"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_rom"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="放贷总额"
                            android:textSize="13sp"
                            android:textColor="#b3b3b3"
                            android:layout_gravity="top"/>
                        <TextView
                            android:id="@+id/recommendedLoanAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:textColor="#FF6600"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_rom"/>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="推荐办卡"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="#b3b3b3"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            >
                            <TextView
                                android:id="@+id/recommendedCCardAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:textColor="#FF6600"
                               />
                            <TextView
                                android:layout_marginLeft="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="13sp"
                                android:textColor="#b3b3b3"
                                android:text="张"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>



