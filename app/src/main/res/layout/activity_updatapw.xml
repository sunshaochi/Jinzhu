<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/title_act_layout" />

    <LinearLayout
        style="@style/input_corners"
        android:orientation="vertical">

        <com.beyonditsm.financial.widget.ClearEditText
            android:id="@+id/comfirmPwd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingRight="15dp"
            android:textSize="15sp" />

        <View style="@style/zc_line" />

        <com.beyonditsm.financial.widget.ClearEditText
            android:id="@+id/comfirmPwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingRight="15dp"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/comfirmtv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_gen"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white" />


</LinearLayout>
